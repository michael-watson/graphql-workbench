{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "tools:*",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsc --noEmit --pretty 2>&1 | head -20",
            "description": "Type-check after edits to catch errors early"
          }
        ]
      }
    ]
  }
}