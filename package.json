{
  "name": "graphql-embedding-monorepo",
  "private": true,
  "version": "0.0.0",
  "description": "Monorepo for GraphQL embedding packages",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean && npm run clean --workspaces",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "tsc --build --noEmit",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish",
    "download:model": "mkdir -p packages/graphql-embedding/models && curl -L -o packages/graphql-embedding/models/embeddinggemma-300M-Q8_0.gguf https://huggingface.co/unsloth/embeddinggemma-300m-GGUF/resolve/main/embeddinggemma-300M-Q8_0.gguf"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^3.0.4",
    "typescript": "^5.3.3",
    "vitest": "^3.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
